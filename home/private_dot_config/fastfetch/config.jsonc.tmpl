{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
{{- if eq .chezmoi.os "darwin" }}
        "source": "macos",
{{- else }}
        "source": "linux",
{{- end }}
        "padding": {
            "top": 1,
            "left": 2,
            "right": 2
        },
        "color": {
            "1": "magenta",
            "2": "cyan"
        }
    },
    "display": {
        "separator": "  ",
        "color": {
            "keys": "35",
            "title": "36",
            "separator": "90"
        }
    },
    "modules": [
        {
            "type": "title",
            "format": "{{ .name }}"
        },
        "separator",
        {
            "type": "os",
            "key": "OS"
        },
        {
            "type": "kernel",
            "key": "Kernel"
        },
        {
            "type": "uptime",
            "key": "Uptime"
        },
        {
            "type": "packages",
            "key": "Packages"
        },
        "break",
        {
            "type": "shell",
            "key": "Shell"
        },
        {
            "type": "terminal",
            "key": "Terminal"
        },
        {
            "type": "terminalfont",
            "key": "Font"
        },
        {
            "type": "editor",
            "key": "Editor"
        },
        {
            "type": "wm",
            "key": "WM"
        },
        {
            "type": "display",
            "key": "Display"
        },
        "break",
        {
            "type": "cpu",
            "key": "CPU"
        },
        {
            "type": "gpu",
            "key": "GPU"
        },
        {
            "type": "memory",
            "key": "Memory"
        },
        {
            "type": "disk",
            "key": "Disk",
{{- if eq .chezmoi.os "darwin" }}
            "folders": "/System/Volumes/Data"
{{- else }}
            "folders": "/"
{{- end }}
        },
        {
            "type": "battery",
            "key": "Battery"
        },
        "break",
        {
            "type": "colors",
            "paddingLeft": 2,
            "symbol": "circle"
        }
    ]
}
