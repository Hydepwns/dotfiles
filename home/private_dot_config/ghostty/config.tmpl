# Ghostty Configuration
# {{ .theme.name }} Theme - Generated from chezmoi.toml

# =============================================================================
# THEME - {{ .theme.name }}
# =============================================================================

background = {{ .theme.bg }}
foreground = {{ .theme.fg }}
cursor-color = {{ .theme.cursor }}
cursor-style = block
cursor-style-blink = true
selection-background = {{ .theme.selection_bg }}
selection-foreground = {{ .theme.selection_fg }}

# Normal colors (0-7)
palette = 0={{ .theme.black }}
palette = 1={{ .theme.red }}
palette = 2={{ .theme.green }}
palette = 3={{ .theme.yellow }}
palette = 4={{ .theme.blue }}
palette = 5={{ .theme.magenta }}
palette = 6={{ .theme.cyan }}
palette = 7={{ .theme.white }}

# Bright colors (8-15)
palette = 8={{ .theme.bright_black }}
palette = 9={{ .theme.bright_red }}
palette = 10={{ .theme.bright_green }}
palette = 11={{ .theme.bright_yellow }}
palette = 12={{ .theme.bright_blue }}
palette = 13={{ .theme.bright_magenta }}
palette = 14={{ .theme.bright_cyan }}
palette = 15={{ .theme.bright_white }}

# =============================================================================
# FONT
# =============================================================================

font-family = Monaspace Neon
font-size = 14
font-feature = liga
font-feature = calt
font-feature = ss01
font-feature = ss02
font-feature = ss03
font-feature = zero

# =============================================================================
# WINDOW
# =============================================================================

window-padding-x = 12
window-padding-y = 8
window-decoration = true
window-theme = ghostty
macos-titlebar-style = hidden
macos-option-as-alt = true

# =============================================================================
# BEHAVIOR
# =============================================================================

copy-on-select = clipboard
confirm-close-surface = false
mouse-hide-while-typing = true
scrollback-limit = 10000

# =============================================================================
# KEYBINDINGS
# =============================================================================

# Split panes (cmd+d horizontal, cmd+shift+d vertical)
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down

# Navigate splits
keybind = cmd+alt+left=goto_split:left
keybind = cmd+alt+right=goto_split:right
keybind = cmd+alt+up=goto_split:top
keybind = cmd+alt+down=goto_split:bottom

# Tabs
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = cmd+shift+left=previous_tab
keybind = cmd+shift+right=next_tab

# Font size
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size

# Clear
keybind = cmd+k=clear_screen
