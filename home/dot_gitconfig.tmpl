[core]
    editor = zed --wait
    pager = delta
    excludesfile = ~/.gitignore_global
    autocrlf = input
{{- if eq .chezmoi.os "darwin" }}
    trustctime = false
    precomposeunicode = false
{{- end }}

[init]
    defaultBranch = main

[color]
    ui = true

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[merge]
    conflictstyle = diff3

[merge "npm-merge-driver"]
    name = automatically merge npm lockfiles
    driver = npx npm-merge-driver merge %A %O %B %P

[diff]
    colorMoved = default

[gpg]
    program = gpg

[commit]
    gpgsign = false

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = true

[rebase]
    autoStash = true

[fetch]
    prune = true

# Delta pager config (better diffs)
[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true
    syntax-theme = Dracula

[interactive]
    diffFilter = delta --color-only

# Aliases
[alias]
    # Status and info
    s = status -sb
    st = status
    ss = status -sb

    # Branching
    b = branch
    br = branch
    ba = branch -a
    bd = branch -d
    bD = branch -D

    # Checkout
    co = checkout
    cob = checkout -b
    com = checkout main
    cod = checkout develop

    # Commit
    c = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit

    # Diff
    d = diff
    ds = diff --staged
    dc = diff --cached

    # Log
    l = log --oneline -20
    lg = log --graph --oneline --decorate -20
    ll = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(auto)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    last = log -1 HEAD --stat

    # Push/Pull
    p = push
    pf = push --force-with-lease
    pl = pull
    plr = pull --rebase

    # Stash
    sh = stash
    shp = stash pop
    shl = stash list
    shd = stash drop

    # Reset
    unstage = reset HEAD --
    undo = reset --soft HEAD~1

    # Misc
    aliases = config --get-regexp alias
    contributors = shortlog -sn
    whoami = config user.email
    root = rev-parse --show-toplevel

    # Cleanup
    cleanup = !git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d
    prune-local = !git fetch -p && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D

{{- if eq .chezmoi.os "darwin" }}
[credential]
    helper = osxkeychain
{{- else if eq .chezmoi.os "linux" }}
[credential]
    helper = cache --timeout=3600
{{- end }}

[safe]
    directory = *
